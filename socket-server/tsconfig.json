{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "lib": ["ES2020"],
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "baseUrl": ".",
      "paths": {
        "@shared/*": ["../shared/*"]
      },
      "outDir": "./dist",
      "rootDir": ".."
    },
    "include": ["**/*.ts", "../shared/**/*.ts"],
    "exclude": ["node_modules"]
  }